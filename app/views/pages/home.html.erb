
<div class="hero-image">
  <div class="hero-text">
    <h1></h1>
    <p><%= link_to "Products", products_path, class:'btn button-home' %></p>
  </div>
</div>

<main>
<div class="container mt-5">
  <%= form_with url: products_path, method: :get, class: "d-flex ms-5" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "search form-control-lg me-1",
          placeholder: "Search"
        %>
        <%= submit_tag "Search", class: "btn button border", style:"color: #ffffff;" %>
          <% end %>
</div>

<div class="container mt-5">
  <h1 class="ms-4 mt-4"> Best offers</h1>
  <div class="grid-container">
<%= render @products %>
</div>
</div>

</main>
