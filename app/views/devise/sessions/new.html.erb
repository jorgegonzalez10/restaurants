<div class="container col-12 col-sm-4 mt-5 bg-white shadow border rounded-4 p-5">
  <div class="row justify-content-center">

    <h2 class="mb-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, placeholder: "bob@gmail.com" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, placeholder:"******" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-success mb-4 p-2 mt-3 w-100'  %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
</div>
