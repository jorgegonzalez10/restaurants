<div class="container mt-5">
  <div class="card shadow-lg border-0">
    <div class="card-header button text-white">
      <h2 class="mb-0">ğŸ§¾ Completed Orders</h2>
    </div>

    <div class="card-body">
      <% if @orders.any? %>
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Order #</th>
              <th>User</th>
              <th>Address</th>
              <th>Date</th>
              <th>Status</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr class="<%= order.paid? ? 'table-success' : 'table-warning' %>">
                <td>#<%= order.id %></td>
                <td><%= order.name %></td>
                <td><%= order.address %></td>
                <td><%= order.date.strftime("%B %d, %Y") %></td>
                <td>
                  <% if order.paid? %>
                    <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Paid</span>
                  <% else %>
                    <span class="badge bg-danger"><i class="bi bi-x-circle-fill"></i> Pending</span>
                  <% end %>
                </td>
                <td><strong><%= number_to_currency(order.total) %></strong></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="alert alert-warning text-center" role="alert">
          <i class="bi bi-exclamation-triangle-fill"></i> You don't have any completed orders yet.
        </div>
      <% end %>
    </div>
  </div>
</div>
