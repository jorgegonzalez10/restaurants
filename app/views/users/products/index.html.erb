<div class="container p-5 mt-5">
<div class="grid text-center">
 <div class="d-flex position-relative ">
  <h1 class="g-col-6 g-col-md-4">My Products</h1>
  <%=link_to "Add new product", new_users_product_path, class:"btn btn-dark btn-lg mt-3 position-absolute end-0 px-3 rounded-5 fw-bold", id:"new"%>
</div>
<div class="btn-group my-4 g-col-6 g-col-md-4">
  <%= link_to "List", users_products_path, class:"btn btn-lg active buttongroup ", id:"active"%>
  <%= link_to "Cards", users_products_cards_path, class:"btn btn-lg buttongroup"%>
</div>
</div>
<%# <div class="grid-container"> %>

    <table class="table table-hover me-5 mt-4 border shadow table-list">
  <thead class="table-list">
    <tr class="table-list">
      <th></th>
      <th>Product</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Discount</th>
      <th>Rating</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="table-list">
    <% @products.each do |product| %>
      <% if controller_path == 'users/products' && product.user == current_user %>
      <tr>
        <td><%= image_tag product.photo, class:"avatar" %></td>
        <td class="fw-bold "><%= product.name %></td>
        <td class="fw-bold"><%= product.price %></td>
        <td class="fw-bold"><%= product.stock %></td>
        <td class="fw-bold"> <% if product.discount.present?  %><%= product.discount %>%
        <%else %>''
        <%end%></td>
        <td class="fw-bold"><%rating = rand(3..5)%>
                <% rating.times do %>
                 <i class="fa-solid fa-star mt-3" style="color: #FFD43B;"></i>
                <%end%></td>
        <td>
          <div class="d-flex">
            <%= link_to "#", class: "btn btn-lg", data: { bs_toggle: "modal", bs_target: "#productModal-#{product.id}" } do %>
              <i class="fas fa-eye icono icono__blue" style="color: rgb(55, 106, 194);"></i>
            <% end %>
            <%= link_to edit_users_product_path(product), class:"btn btn-lg" do %>
                  <i class="fa-solid fa-pen-to-square" style="color:rgb(55, 106, 194);"></i>
            <% end %>
            <%= button_to users_product_path(product), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-lg" do %>
                  <i class="fa-solid fa-trash" style="color:rgb(228, 29, 29);"></i>
            <% end %>

          <div>
        </td>
      </tr>
    <% end %>
    <%= render 'modal', product: product %>
    <%end%>
  </tbody>
</table>
<%# </div> %>

   <%#= render "products/product", product: product %>
</div>
</div>
