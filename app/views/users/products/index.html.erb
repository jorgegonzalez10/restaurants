<div class="container mt-5">
<div class="grid text-center">
<h1 class="g-col-6 g-col-md-4">MyProducts</h1>
<div class="btn-group g-col-6 g-col-md-4">
  <%= link_to "List", users_products_path, class:"btn btn-light btn-lg active"%>
  <%= link_to "Cards", users_products_cards_path, class:"btn btn-light btn-lg active"%>
</div>
</div>
<%# <div class="grid-container"> %>

    <table class="table table-hover mt-5 shadow">
  <thead>
    <tr>
      <th></th>
      <th>Product</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Discount</th>
      <th>Rating</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <% if controller_path == 'users/products' && product.user == current_user %>
      <tr>
        <td class="avatar"><%= image_tag product.photo, class:"avatar" %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%#= product.discount || "-" %></td>
        <td><%#= product.rating || "-" %></td>
        <td>
          <div class="d-flex">
            <%= link_to users_product_path(product), class:"btn btn-lg" do %>
                  <i class="fas fa-eye icono icono__blue" style="color:rgb(55, 106, 194);"></i>
                <% end %>
            <%= link_to edit_users_product_path(product), class:"btn btn-lg" do %>
                  <i class="fa-solid fa-pen-to-square" style="color:rgb(55, 106, 194);"></i>
            <% end %>
            <%= button_to users_product_path(product), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-lg" do %>
                  <i class="fa-solid fa-trash" style="color:rgb(228, 29, 29);"></i>
            <% end %>

          <div>
        </td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>
<%# </div> %>

   <%#= render "products/product", product: product %>
</div>
</div>
